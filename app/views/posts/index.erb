<div class="container">
  <table class="list_all_posts">
  <% @posts.each_with_index do |post, index| %>
    <tr>
      <td class="index_col"><%= index + 1 %></td>
      <td class="upvote_col"><%= link_to image_tag("https://news.ycombinator.com/grayarrow.gif"), new_post_vote_path(post) %></td>
      <td><%= link_to post.title, post.link_url %><span class="url_view">(<%= post.link_url %>)</span><br>
      <span class="posts_second_line_info"><%= post.votes.count %> votes | <%= link_to "comments (#{post.comments.count})", post_path(post) %></span></td>
    </tr>
  <% end %>
  </table>
</div>




