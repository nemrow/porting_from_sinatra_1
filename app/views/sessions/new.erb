<div class="container">
  <div class="container_padding">
    <h1>Login</h1>
    <% if @errors %>
      <%= erb :_errors, locals: {errors: @errors} %>
    <% end %>
    <div id="login">
      <form action="/login" method="post" class="form">
        <input type="text" id="name" placeholder="Name" name="user[name]"><br>
        <input type="text" id="password" placeholder="Password" name="user[password]"><br>
        <input type="submit" value="Login" placeholder=" Confirm password" class="submit-button">
      </form>
    </div>
  </div>
</div>
