<div class="container">
  <div class="container_padding">
    <h1>Login</h1>
    <% if @errors %>
      <%= erb :_errors, locals: {errors: @errors} %>
    <% end %>
    <div id="login">

      <%= form_for @user do |f|  %>
        <%=     f.text_field     :name, placeholder: "Username" %>
        <%=     f.password_field :password, placeholder: "Password" %>
        <%=     f.submit "Login" %>
      <% end %>

    </div>
  </div>
</div>
